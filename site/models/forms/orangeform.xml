<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_FRUIT_FORM_LBL_ORANGE_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_FRUIT_FORM_LBL_ORANGE_CREATED_BY"
            description="COM_FRUIT_FORM_DESC_ORANGE_CREATED_BY"  /> 

       <field name="title" type="text"
                
            label="COM_FRUIT_FORM_LBL_ORANGE_TITLE"
            description="COM_FRUIT_FORM_DESC_ORANGE_TITLE" 
                
                
                 required="true" 
            filter="string" /> 

       <field name="description" type="textarea"
                
            label="COM_FRUIT_FORM_LBL_ORANGE_DESCRIPTION"
            description="COM_FRUIT_FORM_DESC_ORANGE_DESCRIPTION" 
                
                
                
            option_on="Yes"
            option_off="Yes" /> 

       <field name="field1" type="text"
                
            label="COM_FRUIT_FORM_LBL_ORANGE_FIELD1"
            description="COM_FRUIT_FORM_DESC_ORANGE_FIELD1" 
                
                
                
            filter="string" /> 

       <field name="alias" type="text"
                
            label="COM_FRUIT_FORM_LBL_ORANGE_ALIAS"
            description="COM_FRUIT_FORM_DESC_ORANGE_ALIAS" 
                
                
                
            filter="string" /> 

       <field name="access" type="accesslevel"
                
            label="COM_FRUIT_FORM_LBL_ORANGE_ACCESS"
            description="COM_FRUIT_FORM_DESC_ORANGE_ACCESS" 
                
                
                 /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" /> 

 </fieldset> 

 <fieldset
                        name="accesscontrol">
                       <field name="asset_id" type="hidden" filter="unset" />
                       <field name="rules"
                            type="rules"
                            label="JFIELD_RULES_LABEL"
                            translate_label="false"
                            filter="rules"
                            validate="rules"
                            class="inputbox"
                            component="com_fruit"
                            section="orange"
                        />

	</fieldset>

</form>
