<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_FRUIT_FORM_LBL_ORANGE_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_FRUIT_FORM_LBL_ORANGE_CREATED_BY"
            description="COM_FRUIT_FORM_DESC_ORANGE_CREATED_BY"  /> 

	<field
		name="title"
		type="text"
		class="input-xxlarge input-large-text"
		label="JGLOBAL_TITLE"
		description="JFIELD_TITLE_DESC"
		size="40"
		required="true"
	/>

	<field
		name="description"
		type="editor"
		label="JGLOBAL_DESCRIPTION"
		description="COM_TAGS_DESCRIPTION_DESC"
		filter="JComponentHelper::filterText"
		buttons="true"
		hide="readmore,pagebreak"
	/>

	<field
		name="state"
		type="list"
		class="chzn-color-state"
		label="JSTATUS"
		description="JFIELD_PUBLISHED_DESC"
		default="1"
		size="1"
	>
		<option value="1">JPUBLISHED</option>
		<option value="0">JUNPUBLISHED</option>
		<option value="2">JARCHIVED</option>
		<option value="-2">JTRASHED</option>
	</field>

       <field name="field1" type="text"
                
            label="COM_FRUIT_FORM_LBL_ORANGE_FIELD1"
            description="COM_FRUIT_FORM_DESC_ORANGE_FIELD1" 
                
                
                
            filter="string" /> 

	<field
		name="alias"
		type="text"
		label="JFIELD_ALIAS_LABEL"
		description="JFIELD_ALIAS_DESC"
		hint="JFIELD_ALIAS_PLACEHOLDER"
		size="40"
	/>

       	<field
		name="access"
		type="accesslevel"
		label="JFIELD_ACCESS_LABEL"
		description="JFIELD_ACCESS_DESC"
	/>
        
        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" /> 

 </fieldset> 

 <fieldset 
                        name="accesscontrol">
                       <field name="asset_id" type="hidden" filter="unset" />
                       <field name="rules"
                            type="rules"
                            label="JFIELD_RULES_LABEL"
                            translate_label="false"
                            filter="rules"
                            validate="rules"
                            class="inputbox"
                            component="com_fruit"
                            section="orange"
                        />

	</fieldset>

</form>
